<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light" />

    <style name="AppTheme" parent="AppBaseTheme" />

    <style name="popup_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_color</item>
    </style>

    <style name="popup_small_text_singleline" parent="popup_text">
        <item name="android:textSize">@dimen/popup_small_text_size</item>
    </style>

    <style name="popup_rounded_background">
        <item name="android:layout_width">@dimen/popup_width</item>
        <item name="android:layout_height">@dimen/popup_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/popup_round_corner_bg</item>
    </style>

    <style name="popup_close_button">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/close_popup_button_height</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="popup_refresh_button">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/close_popup_button_height</item>
        <item name="android:layout_marginLeft">@dimen/popup_button_margin</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="popup_ok_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/close_popup_button_height</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/popup_button_margin</item>
        <item name="android:layout_marginBottom">@dimen/popup_button_margin</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="popup_inputFormLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/popup_input_form_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">80dp</item>
    </style>

    <style name="popup_input_form_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/popup_input_form_edit_text_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/edit_name_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">20</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_grey_color</item>
        <item name="android:textSize">@dimen/popup_edit_text_size</item>
    </style>

    <style name="camera_control_button">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="camera_tool">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
